<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo2"
tools:context=".activity2">


    <TableRow
        android:layout_width="match_parent"
        android:layout_marginTop="300sp"
        android:layout_marginBottom="200sp"
        android:gravity="center"

        android:paddingLeft="10sp"
        android:paddingRight="10sp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iV1"
                android:layout_width="130sp"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/f"
                android:contentDescription="TODO" />

            <ImageView
                android:id="@+id/iV2"
                android:layout_width="130sp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:srcCompat="@drawable/f" />

            <ImageView
                android:id="@+id/iV3"
                android:layout_width="130sp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:srcCompat="@drawable/f"
                android:contentDescription="@string/todo" />
        </LinearLayout>

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="-150sp"
        android:gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/bjugar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="80sp"
                android:layout_marginRight="80sp"
                android:layout_weight="1"
                android:backgroundTint="#86000A"
                android:onClick="cambiarImagen"
                android:text="@string/jugar"
                android:textColor="#FEFD65"
                android:textSize="18sp"
                android:textStyle="bold" />

        </LinearLayout>

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="110sp"
        android:layout_marginTop="-330sp"
        android:layout_marginRight="110sp"
        android:gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#A951B9E8"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingStart="120sp"
                android:text="@string/jugador"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvNombre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="-100sp"
                android:layout_weight="1"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="150sp"
        android:layout_marginTop="-80sp"
        android:layout_marginRight="150sp"
        android:gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#A951B9E8"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvPremio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="180sp"
                android:text="0"
                android:textColor="#AFA430"
                android:textSize="36sp"
                android:textStyle="bold" />

        </LinearLayout>

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="320sp"
        android:layout_marginTop="-220sp"
        android:layout_marginRight="10sp"
        android:gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/bcerrar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#72000B"
                android:text="Salir"
                android:onClick="Salir"
                android:textColor="#FDFF52" />
        </LinearLayout>

    </TableRow>


</TableLayout>